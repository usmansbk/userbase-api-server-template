{
  "name": "userbase-api-server-template",
  "version": "1.0.0",
  "description": "user managemnet api server template",
  "main": "build/index.js",
  "repository": "git@github.com:usmansbk/userbase-api-server-template.git",
  "author": "usmansbk <usmansbk@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/multer": "^1.4.11",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "dotenv-vault": "^1.25.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "3.1.0",
    "prettier-plugin-prisma": "^5.0.0",
    "rimraf": "^5.0.5",
    "typescript": "*"
  },
  "scripts": {
    "transpile": "babel src -d build --copy-files --extensions .ts",
    "clean": "rimraf build",
    "build": "yarn clean && yarn transpile",
    "start": "node build",
    "dev": "nodemon --exec babel-node src --extensions .ts",
    "test": "jest",
    "prepare": "husky install",
    "generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --force",
    "docker:build": "docker build -t userbase/api . --target dev",
    "docker:start": "docker compose up",
    "docker:down": "docker compose down",
    "docker:clean": "docker system prune -f",
    "docker:stop": "yarn docker:down && yarn docker:clean",
    "docker:sh": "docker exec -it api sh",
    "codegen": "graphql-codegen"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.1",
    "@graphql-tools/schema": "^10.0.2",
    "@graphql-tools/utils": "^10.0.11",
    "@prisma/client": "^5.6.0",
    "@sentry/node": "^7.85.0",
    "@sentry/profiling-node": "^1.2.6",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "i18next": "^23.7.7",
    "i18next-fs-backend": "^2.3.0",
    "i18next-http-middleware": "^3.5.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "prisma": "^5.6.0"
  }
}
