{
  "name": "userbase-api-server-template",
  "version": "1.0.0",
  "description": "user managemnet api server template",
  "main": "build/index.js",
  "repository": "git@github.com:usmansbk/userbase-api-server-template.git",
  "author": "usmansbk <usmansbk@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "dotenv-vault": "^1.25.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "3.1.0",
    "prettier-plugin-prisma": "^5.0.0",
    "rimraf": "^5.0.5",
    "typescript": "*"
  },
  "scripts": {
    "transpile": "babel src -d build --copy-files --extensions .ts",
    "clean": "rimraf build",
    "build": "yarn clean && yarn transpile",
    "start": "node build",
    "dev": "nodemon --exec babel-node src --extensions .ts",
    "test": "jest",
    "prepare": "husky install",
    "generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --force",
    "docker:build": "docker build -t userbase/api . --target dev",
    "docker:start": "docker compose up",
    "docker:down": "docker compose down",
    "docker:clean": "docker system prune -f",
    "docker:stop": "yarn docker:down && yarn docker:clean",
    "docker:sh": "docker exec -it api sh"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
